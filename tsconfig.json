{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "allowJs": true,
    "target": "es2017",
    "module": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [ "./src" ]
}
